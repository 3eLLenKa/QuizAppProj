<Page x:Class="QuizAppProj.Quizes.Biology"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizAppProj.Quizes"
      mc:Ignorable="d" 
      Height="600"
      Width="850"
      Title="Biology">

    <Grid>
        <Border Background="#212529" CornerRadius="20" Grid.RowSpan="6" />

        <TextBlock Grid.Row="0" TextWrapping="Wrap" TextAlignment="Center" Text="Настройки викторины" FontSize="25" Margin="31,13,31,10" Foreground="White"/>

        <!-- Пресеты -->

        <TextBlock Grid.Row="1" TextWrapping="Wrap" TextAlignment="Left" Text="Пресеты:" FontSize="20" Margin="20,13,31,58" Foreground="White"/>

        <RadioButton Content="Легко" Foreground="White" Grid.Row="1" Style="{StaticResource RadioButtonStyle}" Margin="30,52,645,3"/>
        <RadioButton Content="Средне" Foreground="White" Grid.Row="1" Style="{StaticResource RadioButtonStyle}" Margin="235,52,440,3"/>
        <RadioButton Content="Сложно" Foreground="White" Grid.Row="1" Style="{StaticResource RadioButtonStyle}" Margin="440,53,235,3"/>
        <RadioButton Content="Пользовательские" Foreground="White" Grid.Row="1" Style="{StaticResource RadioButtonStyle}" Margin="645,52,30,3"/>

        <!-- Уровень сложности вопросов-->

        <TextBlock Grid.Row="2" TextWrapping="Wrap" TextAlignment="Left" Text="Уровень сложности вопросов:" FontSize="20" Margin="20,13,31,58" Foreground="White"/>

        <RadioButton Content="Легко" Foreground="White" Grid.Row="2" Style="{StaticResource RadioButtonStyle}" Margin="30,52,645,3"/>
        <RadioButton Content="Средне" Foreground="White" Grid.Row="2" Style="{StaticResource RadioButtonStyle}" Margin="338,52,338,3"/>
        <RadioButton Content="Сложно" Foreground="White" Grid.Row="2" Style="{StaticResource RadioButtonStyle}" Margin="645,53,30,3"/>

        <!-- Время на ответ -->

        <TextBlock Grid.Row="3" TextWrapping="Wrap" TextAlignment="Left" Text="Кол-во времени на ответ:" FontSize="20" Margin="20,13,31,58" Foreground="White"/>

        <RadioButton Content="Много" Foreground="White" Grid.Row="3" Style="{StaticResource RadioButtonStyle}" Margin="30,52,645,3"/>
        <RadioButton Content="Средне" Foreground="White" Grid.Row="3" Style="{StaticResource RadioButtonStyle}" Margin="338,52,338,3"/>
        <RadioButton Content="Мало" Foreground="White" Grid.Row="3" Style="{StaticResource RadioButtonStyle}" Margin="645,53,30,3"/>
        
                    <!-- Кол-во вопросов -->

        <TextBlock Grid.Row="4" TextWrapping="Wrap" TextAlignment="Left" Text="Кол-во вопросов:" FontSize="20" Margin="20,13,31,58" Foreground="White"/>

        <RadioButton Content="Много" Foreground="White" Grid.Row="4" Style="{StaticResource RadioButtonStyle}" Margin="30,52,645,3"/>
        <RadioButton Content="Средне" Foreground="White" Grid.Row="4" Style="{StaticResource RadioButtonStyle}" Margin="338,52,338,3"/>
        <RadioButton Content="Мало" Foreground="White" Grid.Row="4" Style="{StaticResource RadioButtonStyle}" Margin="645,53,30,3"/>
        
                    <!-- Продолжить/Назад -->

        <Button Content="Назад" Foreground="White" Background="#272B2F" Grid.Row="5" Margin="30,45,645,10"/>
        <Button Content="Далее" Foreground="White" Background="#272B2F" Grid.Row="5" Margin="645,46,30,10"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
        </Grid.RowDefinitions>
    </Grid>
</Page>